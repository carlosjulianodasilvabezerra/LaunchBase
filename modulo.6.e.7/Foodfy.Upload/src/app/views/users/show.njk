{%extends 'users/layout.njk'%}
{% block content %}

  {% block head %}

    <title>{{recipes.title}}</title>

  {% endblock %}

  <section id="cards">

    <div id="card">
      <div id="card__image">
        <img src="{{recipes.image}}">
      </div>
      <div id="card-title">
        <h1>{{recipes.title}}</h1>
      </div>
      <div id="card-author">
        <p>por
          {{recipes.chef_name}}</p>
      </div>
    </div>

    <div id="ingredients" class="button">
      <div>
        <h2>Ingredientes</h2>
        <span>MOSTRAR</span>
      </div>
      <div class="button-content hidden">
        <ul>
          {% for ingredient in recipes.ingredients %}
            <li>{{ingredient}}</li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <div id="preparation" class="button">
      <div>
        <h2>Modo de preparo</h2>
        <span>MOSTRAR</span>
      </div>
      <div class="button-content hidden">
        <ul>
          {% for preparation in recipes.preparation %}
            <li>{{preparation}}</li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <div id="info" class="button">
      <div>
        <h2>Informações adicionais</h2>
        <span>MOSTRAR</span>
      </div>
      <div class="button-content hidden">
        <p>{{recipes.information}}</p>
      </div>
    </div>
  </section>
{% endblock content %}